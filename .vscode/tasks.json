{
    "version": "2.0.0",
    "windows": {
        "options": {
            "cwd": "${workspaceFolder}",
            "shell": {
                "executable": "cmd.exe",
                "args": [
                    "/d",
                    "/c"
                ]
            }
        }
    },
    "linux": {
        "options": {
            "env": {
                "ARMGCC_DIR": "/usr"
            },
            "cwd": "${workspaceFolder}"
        }
    },
    "tasks": [
        {
            "label": "CMake",
            "group": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "cmake",
            "windows": {
                "args": [
                    "-DCMAKE_TOOLCHAIN_FILE=../tools/cmake_toolchain_files/armgcc.cmake",
                    "-G",
                    "MinGW Makefiles",
                    "-DCMAKE_BUILD_TYPE=${input:target}",
                    ".."
                ]
            },
            "linux": {
                "args": [
                    "-DCMAKE_TOOLCHAIN_FILE=../tools/cmake_toolchain_files/armgcc.cmake",
                    "-G",
                    "Unix Makefiles",
                    "-DCMAKE_BUILD_TYPE=${input:target}",
                    ".."
                ]
            },
            "presentation": {
                "showReuseMessage": false
            }
        },
        {
            "label": "make",
            "group": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "windows": {
                "command": "mingw32-make"
            },
            "linux": {
                "command": "make"
            },
            "args": [
                "-j4"
            ],
            "dependsOn": [
                "CMake"
            ],
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: arm-none-eabi-gcc build active file",
            "command": "/usr/bin/arm-none-eabi-gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "target",
            "description": "Debug target?",
            "options": [
                "debug",
                "release",
                "ddr_debug",
                "ddr_release",
                "flash_debug",
                "flash_release"
            ],
            "default": "debug"
        }
    ]
}